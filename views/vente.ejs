<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Gestion Produit</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900
	&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;
	1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/base.css" />
  </head>
  <body>
  <header class="header">
      <div class="container">
        <div class="header-contenu">
          <h1>Gestion Produit</h1>
          <ul class="menu-principal">
            <li><a href="/">Accueil</a></li>
            <li><a href="/ajouter">Ajouter Produit</a></li>
            <li><a href="/recherche">Rechercher</a></li>
          </ul>
        </div>
      </div>
</header>

    <main>
      <section class="venteProduits">
        <div class="container">
          <div class="form-produit">
            <h2>Produit n° <%= produit.id %></h2>

            <form action="/produits/<%= produit.id %>/vendre" method="POST">
              <label>Quantité</label>
              <input
                type="number"
                name="quantite"
                value="<%= produit.quantite %>"
                required
              />
              <button type="submit">Vendre</button>
            </form>

             <% if (success) { %>
            <div class="message-success"><%= success %></div>
            <% } %>
            
               <% if (error) { %>
            <div class="message-error"><%= error %></div>
            <% } else { %>
          </div>

          <div class="tablauProduits">
            <h2>Historique des ventes</h2>

            <table>
              <thead>
                <tr>
                  <th class="col-id">ID</th>
                  <th class="col-nom">Produit</th>
                  <th class="col-categorie">Catégorie</th>
                  <th class="col-quantite">Quantité</th>
                  <th class="col-prix">Prix Unitaire</th>
                  <th class="col-prix">Prix Total</th>
                  <th class="col-actions">Date</th>
                </tr>
              </thead>

              <tbody>
                <% resultatVente.forEach(vente => { %>
                <tr>
                  <td><%= vente.id %></td>
                  <td><%= vente.nom %></td>
                  <td><%= vente.categorie %></td>
                  <td><%= vente.quantite %></td>
                  <td><%= vente.prix %> FCFA</td>
                  <td><%= vente.prixTotal %> FCFA</td>
                  <td>
                    <%= new Date(vente.date_vente).toLocaleString('fr-FR', {
                        day: '2-digit',
                        month: 'long',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    }) %>
                </td>

                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
            <% } %>
        </div>
      </section>  

    </main>
  </body>
</html>
